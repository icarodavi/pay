{% extends 'layouts/dashboard.njk' %}
{% block body %}
<section id="main">
      <div class="container">
        <header>
          <h2>{{project.title}}</h2>
          <div class="addon">
            <a href="/app/projects/destroy/{{activeId}}" class="btn btn-danger">Excluir projeto</a>
          </div>
        </header>

        <section id="content">
          {% include 'partials/nav.njk' %}

          <article>
            <form action="/app/projects/{{activeId}}/sections/add" method="POST">
              <input type="text" name="title" placeholder="Digite o nome da seção">
              <textarea id="content" name="content" placeholder="Conteúdo da seção"></textarea>
              <button type="submit" class="btn">Salvar</button>
            </form>
          </article>
      </div>
    </section>
{% endblock %}
